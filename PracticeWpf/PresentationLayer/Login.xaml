      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PracticeWpf.PresentationLayer"
      mc:Ignorable="d"
      Title="Login" Width="822.5" Height="462">

    <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <TextBlock HorizontalAlignment="Left" Margin="340,15,0,0" TextWrapping="Wrap" Text="Login " VerticalAlignment="Top" Height="64" Width="149" FontFamily="Old English Text MT" FontSize="50" FontWeight="Bold" TextDecorations="Underline" FontStyle="Italic"/>
        <TextBlock HorizontalAlignment="Left" Margin="198,154,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="38" Width="112" FontSize="28" FontFamily="Gloucester MT Extra Condensed"><Run Text="Grou"/><Run Text="p ID:"/></TextBlock>
        <TextBlock HorizontalAlignment="Left" Margin="259,80,0,0" TextWrapping="Wrap" Text="'WE GO FORWARD. ONLY FORWARD.'" VerticalAlignment="Top" Height="30" Width="330" FontFamily="Viner Hand ITC" FontSize="18"/>
